            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Backend !justMyCode",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--app-dir=backend",
                "--reload",
                "--host", "0.0.0.0",
                "--port", "8001"
            ],
            "jinja": true,
            "justMyCode": false
        }
